    {% endif %}

  </head>

  <body>

  {% include 'includes/header.html' %}

  <div class="container">

    {% block content_wrapper %}
    {% block content %}...{% endblock %}
    {% endblock %}


    {% include 'includes/footer.html' %}

  </div>

