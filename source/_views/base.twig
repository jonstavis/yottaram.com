<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% if page.description %}
    <meta name="description" content="{{ page.description }}">
    <meta name="og:description" content="{{ page.description }}">
    {% else %}
    <meta name="description" content="{{ site.description }}">
    <meta name="og:description" content="{{ site.description }}">
    {% endif %}

    <meta name="author" content="">

    <link rel="icon" href="{{ site.url }}/favicon.png?v={{ site.assets_version }}">
      
    {% if page.title %}
    <title>{{ site.title }} &#124; {{ page.title }}</title>
    <meta name="og:title" content="{{ site.title }} &#124; {{ page.title }}">
    {% else %}
    <title>{{ site.title }} &#124; {{ site.subtitle }}</title>
    <meta name="og:title" content="{{ site.title }} &#124; {{ site.subtitle }}">
    {% endif %}
    
    <link rel="stylesheet" href="{{ site.url }}/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ site.url }}/css/github.css" />
      
    <link href="{{ site.url }}/css/custom.min.css?v={{ site.assets_version }}" rel="stylesheet">
    <link rel="alternate" type="application/atom+xml" href="{{ site.url }}/atom.xml" title="{{ site.title }} activity feed" />
    
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic' rel='stylesheet' type='text/css'>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
